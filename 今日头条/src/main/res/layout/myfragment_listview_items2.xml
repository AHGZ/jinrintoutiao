<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/showTv21"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="扎根农村34载 五旬教师自筹50万元建科学“公园”"
        android:textSize="20sp"
        android:textColor="?attr/textColor"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <ImageView
            android:id="@+id/showIv21"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/showIv22"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/showIv23"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="bottom"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/showTv22"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="手机人民网"
            android:textColor="?attr/textColor"/>

        <TextView
            android:id="@+id/showTv23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2017-08-11 10:22"
            android:layout_marginRight="10dp"
            android:textColor="?attr/textColor"/>
        <ImageView
            android:id="@+id/imageLoad2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/loadmore"
            android:layout_gravity="bottom"
            />
    </LinearLayout>
</LinearLayout>